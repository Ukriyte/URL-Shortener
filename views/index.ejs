<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  <title>Document</title>
</head>


<style>
  footer {
    background-color: #f9f9f9;
    padding: 20px 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .container {
    max-width: 960px;
    margin: 0 auto;
  }

  p {
    margin: 0;
    font-size: 14px;
    color: #555;
  }

  .social-links {
    display: flex;
    justify-content: flex-end;
    align-items: center;
  }

  .social-links img {
    width: 50px;
    height: 50px;
    margin-left: 5px;
  }

  .social-links img:not(:first-child) {
    margin-left: 10px;
  }

  @media (max-width: 768px) {
    p {
      font-size: 12px;
    }

    .social-links img {
      width: 20px;
      height: 20px;
      margin-left: 3px;
    }
  }
</style>


<body>
  <div class="container mt-5">
    <h1 class="text-center">URL Shortner</h1>
    <form action="/shortUrls" method="POST" class="my-4 row p-4 row-cols-sm-auto g-2 border 
    bg-light align-items-center col-12">
      <label for="fullUrl" class="visually-hidden">Full Url</label>
      <input required placeholder="Url" type="url" name="fullUrl" id="fullUrl" class="form-control col mr-2">
      <input required placeholder="Add Notes(Description of Url)" type="string" name="Notes" id="Notes"
        class="form-control col mr-2">
      <button class="btn btn-success" type="submit">Shrink</button>
    </form>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Full URL</th>
            <th>Short URL</th>
            <th>Clicks</th>
            <th>Notes</th>
          </tr>
        </thead>
        <tbody>
          <% shortUrls.forEach(shortUrl=> { %>
            <tr>
              <td>
                <a href="<%= shortUrl.full %>">
                  <%= shortUrl.full %>
                </a>
              </td>
              <td>
                <a href="http://localhost:5000/<%= shortUrl.short %>">http://localhost:5000/<%= shortUrl.short %></a>
              </td>
              <td>
                <%= shortUrl.Clicks %>
              </td>
              <td>
                <%= shortUrl.Notes %>
              </td>
            </tr>
            <% }); %>
        </tbody>
      </table>
    </div>

    <form class="my-4 row p-4 row-cols-sm-auto g-2 border 
        bg-light align-items-center col-12" action="/search" id="search" method="post">
      <input required type="string" class="form-control col" id="searchInput" name="searchInput"
        placeholder="Search by Notes, Short URL or original URL">
      <button type="submit" class="btn btn-success">Search</button>
    </form>
  </div>



  <footer>
    <div class="container">
      <p>Created by: Anurag Chugh</p>
      <div class="social-links">
        <a href="https://github.com/Ukriyte" target="_blank" rel="noopener noreferrer">
          <img src="https://avatars.githubusercontent.com/u/107275759?v=4" alt="GitHub">
        </a>
        <a href="https://twitter.com/nrgchugh" target="_blank" rel="noopener noreferrer">
          <img src="../images/Twitterr.png" alt="Twitter">
        </a>
      </div>
    </div>
  </footer>



</body>


</html>
